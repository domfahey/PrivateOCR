{
  "manifest_version": 3,
  "name": "Local OCR Screenshot",
  "version": "0.2.0",
  "description": "Capture the current tab and run OCR locally in your browser.",
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "Local OCR Screenshot"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "vendor/tesseract/*",
        "vendor/tessdata/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
