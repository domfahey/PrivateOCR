{
  "manifest_version": 3,
  "name": "PrivateOCR",
  "version": "0.4.0",
  "description": "Capture the current tab and run OCR locally in your browser.",
  "author": {
    "name": "Dominic Fahey",
    "email": "domfahey@gmail.com"
  },
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "PrivateOCR"
  },
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["vendor/tesseract/*", "vendor/tessdata/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
