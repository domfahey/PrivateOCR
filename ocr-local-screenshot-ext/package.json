{
  "name": "ocr-local-screenshot-ext",
  "version": "0.3.0",
  "description": "Chrome extension for local OCR of screenshots",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write 'src/**/*.{js,css,html}' '*.json' '*.md'",
    "format:check": "prettier --check 'src/**/*.{js,css,html}' '*.json' '*.md'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.0",
    "eslint": "^8.57.0",
    "globals": "^15.0.0",
    "jsdom": "^25.0.0",
    "prettier": "^3.3.0",
    "vitest": "^2.1.0"
  }
}
